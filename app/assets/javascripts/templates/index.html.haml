%header.row
  %h1.text-center.col-md-6.col-md-offset-3 Find Recipes
%section.row
  %form
    .form-group.col-md-6.col-md-offset-3
      %label.sr-only{ for: 'keywords'} Keywords
      %input.form-control{ autofocus: '', placeholder: 'Recipe name, e.g. Baked Potato', type: 'text', name: 'keywords', 'ng-model' => 'keywords' }
    .form-group.col-md-6.col-md-offset-3.text-center
      %button.btn.btn-primary.btn-lg{ 'ng-click' => 'search(keywords)' } Search
%hr
  %section.row{ 'ng-if' => 'articles'}
    %h1.text-center.h2 Results
    
    %ul.list-unstyled
      %li{'ng-repeat' => 'article in articles'}
        %section.well.col-md-6.col-md-offset-3
          %h1.h3.col-md-6.text-right{style: 'margin-top: 0'}
            %a{href: '#'} {{article.name}}
          .col-md-6
            %button.btn.btn-info Edit
            %button.btn.btn-danger Delete
    
